<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="io.woong.filmpedia.ui.page.movies.MoviesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FilmpediaToolbarTheme"
            app:menu="@menu/menu_movies_toolbar"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_logo"
                android:tint="@color/white" />
        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <io.woong.filmpedia.ui.component.RecommendedMovieView
                        android:id="@+id/recommended_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        movies_recommended_movie="@{vm.recommendedMovie}"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingStart="16dp"
                        android:paddingBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/recommended_movie"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            style="@style/FilmpediaTitleTheme"
                            android:text="@string/top10_now_playing" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top10_now_playing_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            movies_top10_movies="@{vm.top10NowPlayingMovies}"
                            tools:orientation="horizontal"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_top10_movie_list_item_view" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            style="@style/FilmpediaTitleTheme"
                            android:text="@string/top10_popular" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top10_popular_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            movies_top10_movies="@{vm.top10PopularMovies}"
                            tools:orientation="horizontal"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_top10_movie_list_item_view" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            style="@style/FilmpediaTitleTheme"
                            android:text="@string/top10_high_rated" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top10_rated_list"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            movies_top10_movies="@{vm.top10RatedMovies}"
                            tools:orientation="horizontal"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_top10_movie_list_item_view" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            style="@style/FilmpediaTitleTheme"
                            android:text="@string/top10_upcoming" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top10_upcoming_list"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            movies_top10_movies="@{vm.top10UpcomingMovies}"
                            tools:orientation="horizontal"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/layout_top10_movie_list_item_view" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>
