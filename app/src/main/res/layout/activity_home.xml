<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="io.woong.filmpedia.ui.activity.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
            app:layout_constraintBottom_toTopOf="@+id/home_navigation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <io.woong.filmpedia.ui.component.RecommendedMovieView
                    android:id="@+id/recommended_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top10_now_playing"
                    style="@style/HomeMovieListTitleTheme" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top10_now_playing_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:orientation="horizontal"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_top10_movie_list_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top10_popular"
                    style="@style/HomeMovieListTitleTheme" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top10_popular_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:orientation="horizontal"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_top10_movie_list_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top10_high_rated"
                    style="@style/HomeMovieListTitleTheme" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top10_rated_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:orientation="horizontal"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_top10_movie_list_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top10_upcoming"
                    style="@style/HomeMovieListTitleTheme" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top10_upcoming_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    tools:orientation="horizontal"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_top10_movie_list_item_view" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/home_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_navigation"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
