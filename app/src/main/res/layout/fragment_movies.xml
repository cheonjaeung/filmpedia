<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <io.woong.filmpedia.ui.component.RecommendedMovieView
                        android:id="@+id/recommended_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top10_now_playing"
                        style="@style/HomeMovieListTitleTheme" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top10_now_playing_list"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        tools:orientation="horizontal"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/layout_top10_movie_list_item_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top10_popular"
                        style="@style/HomeMovieListTitleTheme" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top10_popular_list"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        tools:orientation="horizontal"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/layout_top10_movie_list_item_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top10_high_rated"
                        style="@style/HomeMovieListTitleTheme" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top10_rated_list"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        tools:orientation="horizontal"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/layout_top10_movie_list_item_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top10_upcoming"
                        style="@style/HomeMovieListTitleTheme" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top10_upcoming_list"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="8dp"
                        tools:orientation="horizontal"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/layout_top10_movie_list_item_view" />
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>
</layout>
