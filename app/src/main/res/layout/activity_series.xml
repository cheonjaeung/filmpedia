<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="io.woong.filmpedia.ui.page.series.SeriesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/backdrop_layout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        series_backdrop="@{vm.collection.backdropPath}"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/placeholder_backdrop" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/background_backdrop_mask" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/poster"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="16dp"
                    series_poster="@{vm.collection.posterPath}"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="@+id/backdrop_layout"
                    app:layout_constraintTop_toTopOf="@+id/backdrop_layout"
                    app:layout_constraintRight_toRightOf="@+id/backdrop_layout"
                    app:layout_constraintBottom_toBottomOf="@+id/backdrop_layout"
                    tools:src="@drawable/placeholder_poster" />

                <io.woong.filmpedia.ui.component.CircularRatingView
                    android:id="@+id/rating"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    style="@style/FilmpediaRatingViewTheme"
                    app:layout_constraintRight_toRightOf="@+id/backdrop_layout"
                    app:layout_constraintBottom_toBottomOf="@+id/backdrop_layout"
                    tools:rating="8.0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/backdrop_layout">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/FilmpediaMovieTitleTheme"
                        android:text="@{vm.collection.name}"
                        tools:text="Series Title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/overview"
                        style="@style/FilmpediaTitleTheme" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{vm.collection.overview}"
                        tools:text="This is a sample of the movie overview." />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/movies"
                        style="@style/FilmpediaTitleTheme" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/movies_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        series_movies="@{vm.collection.parts}"
                        tools:orientation="vertical"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_series_movie_list" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
