<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filmpedia" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Basic text color. -->
        <item name="android:textColor">@color/white</item>
        <!-- Basic bottom sheet dialog theme. -->
        <item name="bottomSheetDialogTheme">@style/FilmpediaBottomSheetTheme</item>
    </style>

    <style name="FilmpediaToolbarTheme" parent="Theme.Filmpedia">
        <item name="android:background">@color/background</item>
        <item name="titleCentered">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/white</item>
        <item name="android:colorControlNormal" tools:targetApi="m">@color/white</item>
    </style>

    <style name="FilmpediaTabLayoutItemTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilmpediaTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilmpediaMovieTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilmpediaReleaseDateTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="FilmpediaTaglineTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FilmpediaEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColorHighlight">@color/purple</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FilmpediaButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_white_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FilmpediaImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FilmpediaBottomSheetTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FilmpediaBottomSheetStyle</item>
    </style>

    <style name="FilmpediaBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="FilmpediaRatingViewTheme">
        <item name="android:padding">4dp</item>
        <item name="background_circle_color">@color/light_gray</item>
        <item name="center_circle_color">@color/dark_gray</item>
        <item name="rating_arc_size">2dp</item>
        <item name="rating_text_size">10sp</item>
        <item name="rating_text_color">?android:attr/textColor</item>
    </style>
</resources>
