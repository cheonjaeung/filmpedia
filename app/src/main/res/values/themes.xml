<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filmpedia" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Basic text color. -->
        <item name="android:textColor">@color/white</item>
        <!-- Basic bottom sheet dialog theme. -->
        <item name="bottomSheetDialogTheme">@style/FilmpediaBottomSheetTheme</item>
    </style>

    <style name="FilmpediaTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilmpediaMovieTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilmpediaReleaseDateTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="FilmepediaTaglineTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HomeMovieListTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FilmpediaBottomSheetTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FilmpediaBottomSheetStyle</item>
    </style>

    <style name="FilmpediaBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="FilmpediaRatingViewTheme">
        <item name="android:padding">4dp</item>
        <item name="background_circle_color">@color/light_gray</item>
        <item name="center_circle_color">@color/dark_gray</item>
        <item name="rating_arc_size">2dp</item>
        <item name="rating_text_size">10sp</item>
        <item name="rating_text_color">?android:attr/textColor</item>
    </style>
</resources>
