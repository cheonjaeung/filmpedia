<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularRatingView">
        <attr name="rating" format="string" />
        <attr name="rating_max" format="string" />
        <attr name="rating_arc_size" format="dimension" />
        <attr name="rating_arc_color" format="color" />
        <attr name="rating_text_size" format="dimension" />
        <attr name="rating_text_color" format="color" />
        <attr name="background_circle_color" format="color" />
        <attr name="center_circle_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FilmographyTextView">
        <attr name="movie_title" format="string" />
        <attr name="movie_title_color" format="color" />
        <attr name="movie_title_size" format="dimension" />
        <attr name="department" format="string" />
        <attr name="department_color" format="color" />
        <attr name="department_size" format="dimension" />
        <attr name="text_type" format="enum">
            <enum name="acting" value="0" />
            <enum name="staff" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GenresTextView">
        <attr name="genres" format="string" />
        <attr name="separator" format="string" />
        <attr name="separator_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SeriesButton">
        <attr name="ratio" format="string" />
    </declare-styleable>
</resources>
